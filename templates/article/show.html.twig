{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="flex h-screen">
    <div class="w-1/3  content-center bg-cover opacity-75 bg-no-repeat bg-[url(https://i.pinimg.com/originals/f0/c6/ca/f0c6cac86c1f1b870b390dc4eb4a06a5.gif)] bg-center"></div>
    <div class="w-2/3">
        <img src="{{ article.image }}"
        class=" w-full h-1/2 object-cover">
        <div class="px-10">
            <h1 class="text-5xl font-bold text-cyan-800  pt-4 pb-4">{{ article.titre }}</h1>
            <h2 class="block text-lg text-gray-500">{{ article.user.name }}</h2>
            <h2 class="block text-lg text-gray-500">{{ article.dateCreation ? article.dateCreation|date('Y-m-d H:i:s') : '' }}</h2>
            <p class=" pt-4 text-justify">{{ article.description }}</p>
            <a href="{{ path('app_article_index') }}" class="cursor-pointer duration-200 hover:scale-125 active:scale-100">
                <svg xmlns="http://www.w3.org/2000/svg" width="50px" height="50px" viewBox="0 0 24 24" class="stroke-blue-300">
                  <path stroke-linejoin="round" stroke-linecap="round" stroke-width="1.5" d="M11 6L5 12M5 12L11 18M5 12H19"></path>
                </svg>
              </a>
        </div>

        
    </div>
</div>

{% endblock %}


